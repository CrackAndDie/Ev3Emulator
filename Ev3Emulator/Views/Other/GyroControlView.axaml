<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
			 d:DesignWidth="800" 
			 d:DesignHeight="450"
             x:Class="Ev3Emulator.Views.Other.GyroControlView"
			 x:CompileBindings="False">
	<Grid ColumnDefinitions="Auto,*"
		  RowDefinitions="*,*">
		<TextBlock Text="Rot:"
				   FontWeight="Medium"
				   FontFamily="{StaticResource MontsFont}"
                   Foreground="Black"
				   VerticalAlignment="Center"
				   Grid.Column="0"
				   Grid.Row="0"
				   Grid.RowSpan="2"
				   Margin="0,0,14,0"/>
		<Slider Maximum="180"
				Minimum="-180"
				TickFrequency="1"
				Grid.Column="1"
				Grid.Row="0"
				Theme="{StaticResource MainSlider}"
				VerticalAlignment="Center"
				HorizontalAlignment="Stretch"
				Name="gyroSlider"/>
		<TextBlock Text="{Binding CurrentRotation}"
				   Grid.Column="1"
				   Grid.Row="1"
				   VerticalAlignment="Center"
				   FontWeight="Medium"
				   FontFamily="{StaticResource MontsFont}"
                   Foreground="Black"/>
	</Grid>
</UserControl>
