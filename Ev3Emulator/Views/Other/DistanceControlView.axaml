<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
		     xmlns:prismRegions="clr-namespace:Prism.Regions;assembly=Prism.Avalonia"
             prism:ViewModelLocator.AutoWireViewModel="True"
			 mc:Ignorable="d" 
			 d:DesignWidth="800" 
			 d:DesignHeight="450"
             x:Class="Ev3Emulator.Views.Other.DistanceControlView"
			 x:CompileBindings="False">
	<Grid ColumnDefinitions="Auto,*"
		  RowDefinitions="*,*">
		<TextBlock Text="Dist:"
				   FontWeight="Medium"
				   FontFamily="{StaticResource MontsFont}"
                   Foreground="Black"
				   VerticalAlignment="Center"
				   Grid.Column="0"
				   Grid.Row="0"
				   Grid.RowSpan="2"
				   Margin="0,0,14,0"/>
		<Slider Maximum="{Binding MaxDistance}"
				Minimum="0"
				TickFrequency="1"
				Grid.Column="1"
				Grid.Row="0"
				Value="10"
				Theme="{StaticResource MainSlider}"
				VerticalAlignment="Center"
				HorizontalAlignment="Stretch"
				Name="distSlider"/>
		<TextBlock Text="{Binding CurrentDistance}"
				   Grid.Column="1"
				   Grid.Row="1"
				   VerticalAlignment="Center"
				   FontWeight="Medium"
				   FontFamily="{StaticResource MontsFont}"
                   Foreground="Black"/>
	</Grid>
</UserControl>
